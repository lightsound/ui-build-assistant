{
  "name": "UI Build Assistant",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "You can create layouts easily!",
  "permissions": ["activeTab", "storage", "http://*/*", "https://*/*", "file:///*"],
  "options_page": "index.html",
  "background": {
    "scripts": ["index.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/itu16.png",
      "32": "icons/itu32.png",
      "48": "icons/itu48.png",
      "128": "icons/itu128.png"
    }
  },
  "icons": {
    "16": "icons/itu16.png",
    "32": "icons/itu32.png",
    "48": "icons/itu48.png",
    "128": "icons/itu128.png"
  }
}
